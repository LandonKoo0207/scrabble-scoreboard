<ul class="list-group">
<%= form_for @scrabble do |f| %>
  <li class="list-group-item" id="scrabble">
    <div class="new-scrabble-num-of-players">
      <%= f.label :num_of_players, "How many players? (2-4): ", autofocus: true %>
      <div> 
        <%= f.number_field :num_of_players, id: "new-num-of-players-text", autofocus: true %>
      </div>
    </div>
  </li>
  <li class="list-group-item" id="create-scrabble">
  <%= f.submit id: "bottom-btn" %>
  </li>
<% end %>
</ul>
